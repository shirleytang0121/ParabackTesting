{
	"env": {
		"es6": true,
		"node": true,
		"browser": true,
		"jest": true
	},
	"extends": [
			"airbnb-base"
	],
	"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly",
			"Log": false
	},
	"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
	},
	"rules": {
		"max-len": [
			"error",
			120
		],
		"indent": [
			"error",
			2
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"curly": [
			"error",
			"all"
		],
		"eol-last": [
			"error",
			"always"
		],
		"no-undefined": [
			"error"
		],
		"no-console": [
			"error"
		],
		"no-use-before-define": ["error", { "functions": false }]
	}
}
